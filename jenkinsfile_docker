pipeline {
    agent {
        dockerfile {
            filename 'dockerfile'
        }
    }
	environment {
       ANSIBLE_PRIVATE_KEY=credentials('jenkins-root-key') 
    }
    stages {
       stage('ansible') {
	     steps{
		    script {
                sh """
                   ansible-playbook -i hosts.yaml --private-key=$ANSIBLE_PRIVATE_KEY -u jenkins playbook.yaml
                """
			}
		 }
       }
              
    }
}     