pipeline {
    agent {
        dockerfile {
            filename 'dockerfile'
        }
    }
    stages {
        stage('downloading')  { 
            steps{
                git branch: 'main', url: 'https://github.com/solbarre/ansible_apache.git'
				sh 'ls -ld /tmp'
				sh 'pwd'
				sh 'mkdir /.ansible'
				sh 'id'
                ansiblePlaybook(
                    colorized: true,
                    become: true,		
                    playbook: 'playbook.yaml',
                    inventory: 'hosts.yaml',
                    credentialsId: 'jenkins-root-key',
                    hostKeyChecking: false,
                )
            }
        }
              
    }

}     